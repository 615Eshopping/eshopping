<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eshopping.dao.UserDao">
    <resultMap id="userResultMap" type="com.eshopping.entity.User" >
        <id column="userID" property="userId" jdbcType="INTEGER" />
        <result column="username" property="userName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="sex" property="sex" jdbcType="BIT" />
        <result column="address" property="address" jdbcType="VARCHAR" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
        <result column="post" property="post" jdbcType="VARCHAR" />
        <result column="email" property="email" jdbcType="VARCHAR" />
        <result column="regTime" property="regTime" jdbcType="TIMESTAMP" />
        <result column="regIpAddress" property="regIpAddress" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
        userID, username, password, name, sex, address, phone, post, email, regTime, regIpAddress
    </sql>

    <select id="getUserById" parameterType="Integer" resultMap="userResultMap">
    SELECT
        <include refid="Base_Column_List" />
    FROM users
    WHERE  userId = #{userId}
    </select>

    <select id="getUserByName" parameterType="String" resultMap="userResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM users
        WHERE  userName= #{userName}
    </select>

    <insert id="addUser" parameterType="User" >
    insert into users (userID, username, password,
      name, sex, address, phone,
      post, email, regTime,
      regIpAddress)
    values (#{userId,jdbcType=INTEGER}, #{userName,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR},
      #{name,jdbcType=VARCHAR}, #{sex,jdbcType=BIT}, #{address,jdbcType=VARCHAR}, #{phone,jdbcType=VARCHAR},
      #{post,jdbcType=VARCHAR}, #{email,jdbcType=VARCHAR}, #{regTime,jdbcType=TIMESTAMP},
      #{regIpAddress,jdbcType=VARCHAR})
  </insert>

    <delete id="deleteUserById" parameterType="Integer">
        DELETE FROM users
        WHERE userId = #{userId}
    </delete>

    <update id="updateUser" parameterType="User" >
        update users
        <set >
            <if test="userName != null" >
                username = #{userName,jdbcType=VARCHAR},
            </if>
            <if test="password != null" >
                password = #{password,jdbcType=VARCHAR},
            </if>
            <if test="name != null" >
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="sex != null" >
                sex = #{sex,jdbcType=BIT},
            </if>
            <if test="address != null" >
                address = #{address,jdbcType=VARCHAR},
            </if>
            <if test="phone != null" >
                phone = #{phone,jdbcType=VARCHAR},
            </if>
            <if test="post != null" >
                post = #{post,jdbcType=VARCHAR},
            </if>
            <if test="email != null" >
                email = #{email,jdbcType=VARCHAR},
            </if>
            <if test="regTime != null" >
                regTime = #{regTime,jdbcType=TIMESTAMP},
            </if>
            <if test="regIpAddress != null" >
                regIpAddress = #{regIpAddress,jdbcType=VARCHAR},
            </if>
        </set>
        where userId = #{userId,jdbcType=INTEGER}
    </update>

    <select id="getALL" resultMap="userResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM users
    </select>
</mapper>